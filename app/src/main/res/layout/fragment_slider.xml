<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.landing.slider.SliderFragment">
    
    <ImageView
        android:id="@+id/iv_landing"
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_150sdp"
        android:contentDescription="@string/desc_img_landing"
        tools:src="@drawable/ic_landing_page1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_landing"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_neue_bold"
        android:textSize="@dimen/_20ssp"
        android:textAlignment="center"
        android:textColor="@color/black"
        tools:text="@string/text_landing_first"
        app:layout_constraintTop_toBottomOf="@id/iv_landing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>