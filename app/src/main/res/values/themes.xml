<resources>
    <!-- Base application theme. -->
    <style name="Theme.BinarAndroidChapter5Challenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_500</item>
        <item name="colorPrimaryVariant">@color/dark_green_custom</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LinearLayout.Player" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/_77sdp</item>
        <item name="android:layout_height">@dimen/_262sdp</item>
    </style>

    <style name="Text.Base" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:fontFamily">@font/comic_neue_bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="Text.Header" parent="Text.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_31sdp</item>
        <item name="android:textSize">@dimen/_26ssp</item>
    </style>

    <style name="Text.Player" parent="Text.Base">
        <item name="android:textColor">@color/light_blue_600</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_23sdp</item>
    </style>

    <style name="Text.Result" parent="Text.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.Button" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:layout_height">@dimen/_77sdp</item>
    </style>

    <style name="Base.Icon" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Base.Text" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Dialog.Result" parent="Theme.BinarAndroidChapter5Challenge">
        <item name="android:background">@drawable/bg_edit_text_rounded_white</item>
    </style>
</resources>